<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/ospin"
        android:layout_width="188dp"
        android:layout_height="56dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="409dp"
        app:layout_constraintBottom_toTopOf="@+id/cbut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ispin"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/cbut"
        android:onClick="onClick"
        android:text= "Convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="153dp"
        android:layout_marginTop="446dp"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"

        tools:text="convert" />

    <Spinner
        android:id="@+id/ispin"
        android:layout_width="187dp"
        android:layout_height="50dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="49dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/ospin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputtext"
        android:layout_width="198dp"
        android:layout_height="79dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="528dp"
        android:autofillHints=""
        android:inputType=""
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/cbut"
        app:layout_constraintEnd_toStartOf="@+id/ispin"
        app:layout_constraintHorizontal_bias="0.582"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.235"
        tools:ignore="LabelFor,TextSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/outputtext"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="173dp"
        app:layout_constraintBottom_toTopOf="@+id/cbut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ospin" />
</androidx.constraintlayout.widget.ConstraintLayout>